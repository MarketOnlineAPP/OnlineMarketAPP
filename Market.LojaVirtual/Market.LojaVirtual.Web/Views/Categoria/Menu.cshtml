@model System.Collections.Generic.IEnumerable<string>

@Html.ActionLink("Todos os Produtos", "ListaProdutos", "Vitrine", null, new {@class = "btn btn-block btn-primary"})

@foreach (var link in Model)
{
    @Html.RouteLink(link,
        new
        {
            controller = "Vitrine",
            action = "ListaProdutos",
            categoria = link,
            pagina = 1},
        new {
            @class = "btn btn-block btn-primary"
            + (link == ViewBag.CategoriaSelecionada ? "btn-primary" : "")
        })
}